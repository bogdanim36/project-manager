{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "removeComments": true,
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "paths": {
      "@shared/*": [
        "../shared/*"
      ],
      "@module/*": [
        "./app/pm/*"
      ],
      "@server/*": [
        "./*"
      ],
      "*": [
        "../../node_modules/@types"
      ]
    },
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
