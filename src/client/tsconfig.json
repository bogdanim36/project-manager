{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@shared/*": ["../shared/*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2016",
      "es2015",
      "es5",
      "es6",
      "dom"
    ]
  }
}
